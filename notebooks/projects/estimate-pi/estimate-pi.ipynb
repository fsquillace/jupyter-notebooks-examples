    "import random, math\n",
    "\n",
    "def estimate_pi(trials):\n",
    "    count_inside = 0\n",
    "    for t in range(trials):\n",
    "        if math.hypot(random.random(), random.random()) < 1:\n",
    "            count_inside += 1\n",
    "            \n",
    "    return 4*(count_inside/trials)\n",
    "\n",
    "estimate_pi(10000000)"
   ]
